<h1>Edit this recipe! Make it your own!</h1>



<form action="/recipes/{{recipes.id}}?_method=put" method="post">
  <label>Name</label>
  <input type="text" name="name" value="{{recipes.name}}">
  <label>Ingredients</label>
  <input type="text" name="ingredients" value="{{recipes.ingredients}}">
  <label>Steps</label>
  <input type="text" name="instructions" value="{{recipes.instructions}}">
  <input type="submit" value="Edit">
</form>

<form action="/recipes/{{recipes.id}}?_method=delete" method="post">
  <input type="submit" value="Remove">
</form>
<footer><a href="/recipes/">Back to recipes!</a></footer>



