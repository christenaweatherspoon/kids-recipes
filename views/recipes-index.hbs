<h1>Recipes:</h1>

<table>
  {{#each recipes as |recipe|}}
  <tr>
    <td>
      <a href="/recipes/{{recipe.id}}">{{recipe.name}}</a>
    </td>
    <td>
      {{ recipe.user }}
      <a href="{{ user }} /recipes/edit/{{recipe.id}}">Edit</a> 
    </td>
  </tr>
  {{/each}}
</table>

<br>
<a href="/recipes/new">Want to add a recipe to this list? Go ahead! Click here!</a>



